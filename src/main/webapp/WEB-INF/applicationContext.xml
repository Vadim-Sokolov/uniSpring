<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean id="datasource"
		class="com.foxminded.univer.spring.config.DataSourceForJdbcTemplate">
		<property name="driver" value="${driver}" />
		<property name="url" value="${url}" />
		<property name="username" value="${dbuser}" />
		<property name="password" value="${dbpassword}" />
	</bean>

	<bean id="auditoriumDao"
		class="com.foxminded.univer.spring.dao.AuditoriumDaoSpring">
		<property name="datasource" ref="datasource" />
	</bean>
	<bean id="auditoriumService"
		class="com.foxminded.univer.service.AuditoriumService">
		<constructor-arg ref="dao" />
	</bean>

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:connection.properties</value>
			</list>
		</property>
		<property name="ignoreResourceNotFound" value="true" />
		<property name="systemPropertiesModeName"
			value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
	</bean>

</beans>
